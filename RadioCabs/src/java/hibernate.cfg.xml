<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
    <property name="hibernate.connection.url">jdbc:sqlserver://localhost:1433;databaseName=radiocabs</property>
    <property name="hibernate.connection.username">sa</property>
    <property name="hibernate.connection.password">1234$</property>
    <mapping resource="org/group2/entity/PaymentType.hbm.xml"/>
    <mapping resource="org/group2/entity/RegisteredType.hbm.xml"/>
    <mapping resource="org/group2/entity/Feedback.hbm.xml"/>
    <mapping resource="org/group2/entity/RegisteredUnit.hbm.xml"/>
    <mapping resource="org/group2/entity/Administrator.hbm.xml"/>
    <mapping resource="org/group2/entity/FeedbackType.hbm.xml"/>
    <mapping resource="org/group2/entity/Billing.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
